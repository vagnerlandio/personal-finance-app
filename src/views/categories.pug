extends _layout.pug

block variables
  - var title = "Categories";
block page_style
  +add_style('css/categories.css')
block title
  +head_title(title)
block nav_title
  a(href="#!" class="brand-logo center")= title
block page_script
  +add_script('js/categories.js')
block content
  ul#tabs-swipe-demo.tabs
    li.tab.col.s3
      a.active.grey.lighten-5.red-text(href='#expenses-page') Expenses
    li.tab.col.s3
      a.grey.lighten-5.green-text(href='#incomes-page') Incomes
    li.tab.col.s3
      a.grey.lighten-5.blue-text(href='#accounts-page') Accounts
  #expenses-page.col.s12
    ul.collection
  #incomes-page.col.s12
    ul.collection
  #accounts-page.col.s12
    ul.collection
